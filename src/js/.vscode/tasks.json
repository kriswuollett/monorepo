{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "batteries-included:css:build",
      "command": "yarn",
      "args": ["run", "css:build"],
      "options": {
        "cwd": "${workspaceRoot}/packages/batteries-included"
      }
    },
    {
      "label": "batteries-included:css:build-and-watch",
      // Make sure generated css is built before running the watch background task.
      "dependsOn": ["batteries-included:css:build"],
      "command": "yarn",
      "args": ["run", "css:watch"],
      "options": {
        "cwd": "${workspaceRoot}/packages/batteries-included"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "css",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(\\w+): (.+):(\\d+):(\\d+): (.+)$",
          "code": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    }
  ]
}
